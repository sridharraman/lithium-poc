<%- model_class = CurrentVehiclePosition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:vehicle_id) %></th>
      <th><%= model_class.human_attribute_name(:trip_id) %></th>
      <th><%= model_class.human_attribute_name(:curr_lat) %></th>
      <th><%= model_class.human_attribute_name(:curr_lon) %></th>
      <th><%= model_class.human_attribute_name(:curr_timestamp) %></th>
      <th><%= model_class.human_attribute_name(:prev_lat) %></th>
      <th><%= model_class.human_attribute_name(:prev_lon) %></th>
      <th><%= model_class.human_attribute_name(:heading) %></th>
      <th><%= model_class.human_attribute_name(:speed) %></th>
      <th><%= model_class.human_attribute_name(:altitude) %></th>
      <th><%= model_class.human_attribute_name(:accuracy) %></th>
      <th><%= model_class.human_attribute_name(:soc) %></th>
      <th><%= model_class.human_attribute_name(:dte) %></th>
      <th><%= model_class.human_attribute_name(:odometer_reading) %></th>
      <th><%= model_class.human_attribute_name(:distance_from_previous) %></th>
      <th><%= model_class.human_attribute_name(:distance_covered) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @current_vehicle_positions.each do |current_vehicle_position| %>
      <tr>
        <td><%= current_vehicle_position.id %></td>
          <td><%= current_vehicle_position.vehicle_id %></td>
          <td><%= current_vehicle_position.trip_id %></td>
          <td><%= current_vehicle_position.curr_lat %></td>
          <td><%= current_vehicle_position.curr_lon %></td>
          <td><%= current_vehicle_position.curr_timestamp %></td>
          <td><%= current_vehicle_position.prev_lat %></td>
          <td><%= current_vehicle_position.prev_lon %></td>
          <td><%= current_vehicle_position.heading %></td>
          <td><%= current_vehicle_position.speed %></td>
          <td><%= current_vehicle_position.altitude %></td>
          <td><%= current_vehicle_position.accuracy %></td>
          <td><%= current_vehicle_position.soc %></td>
          <td><%= current_vehicle_position.dte %></td>
          <td><%= current_vehicle_position.odometer_reading %></td>
          <td><%= current_vehicle_position.distance_from_previous %></td>
          <td><%= current_vehicle_position.distance_covered %></td>
        <td><%=l current_vehicle_position.created_at, format: :long %></td>
        <td>
          <%= link_to current_vehicle_position_path(current_vehicle_position), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_current_vehicle_position_path(current_vehicle_position), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to current_vehicle_position_path(current_vehicle_position), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_current_vehicle_position_path,
            :class => 'btn btn-primary' %>

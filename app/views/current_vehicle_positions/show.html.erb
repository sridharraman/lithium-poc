<%- model_class = CurrentVehiclePosition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:vehicle_id) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.vehicle_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:trip_id) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.trip_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:curr_lat) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.curr_lat %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:curr_lon) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.curr_lon %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:curr_timestamp) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.curr_timestamp %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:prev_lat) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.prev_lat %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:prev_lon) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.prev_lon %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:heading) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.heading %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:speed) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.speed %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:altitude) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.altitude %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:accuracy) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.accuracy %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:soc) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.soc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dte) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.dte %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:odometer_reading) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.odometer_reading %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:distance_from_previous) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.distance_from_previous %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:distance_covered) %></dt>
      <dd><pre class="prettyprint"><%= @current_vehicle_position.distance_covered %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              current_vehicle_positions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_current_vehicle_position_path(@current_vehicle_position), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              current_vehicle_position_path(@current_vehicle_position),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
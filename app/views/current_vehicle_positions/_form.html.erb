<%= form_for @current_vehicle_position, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :vehicle_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :vehicle_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :trip_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :trip_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :curr_lat, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :curr_lat, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :curr_lon, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :curr_lon, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :curr_timestamp, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :curr_timestamp, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prev_lat, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :prev_lat, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :prev_lon, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :prev_lon, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :heading, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :heading, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :speed, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :speed, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :altitude, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :altitude, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :accuracy, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :accuracy, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :soc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :soc, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dte, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :dte, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :odometer_reading, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :odometer_reading, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :distance_from_previous, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :distance_from_previous, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :distance_covered, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :distance_covered, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  current_vehicle_positions_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

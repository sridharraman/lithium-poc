<%- model_class = TripSummary -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:trip_id) %></th>
      <th><%= model_class.human_attribute_name(:distance) %></th>
      <th><%= model_class.human_attribute_name(:time_of_departure) %></th>
      <th><%= model_class.human_attribute_name(:time_of_arrival) %></th>
      <th><%= model_class.human_attribute_name(:start_soc) %></th>
      <th><%= model_class.human_attribute_name(:end_soc) %></th>
      <th><%= model_class.human_attribute_name(:average_speed) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trip_summaries.each do |trip_summary| %>
      <tr>
        <td><%= trip_summary.id %></td>
          <td><%= trip_summary.trip_id %></td>
          <td><%= trip_summary.distance %></td>
          <td><%= trip_summary.time_of_departure %></td>
          <td><%= trip_summary.time_of_arrival %></td>
          <td><%= trip_summary.start_soc %></td>
          <td><%= trip_summary.end_soc %></td>
          <td><%= trip_summary.average_speed %></td>
        <td><%=l trip_summary.created_at, format: :long %></td>
        <td>
          <%= link_to trip_summary_path(trip_summary), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_trip_summary_path(trip_summary), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to trip_summary_path(trip_summary), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trip_summary_path,
            :class => 'btn btn-primary' %>

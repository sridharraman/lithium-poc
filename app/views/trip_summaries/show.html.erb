<%- model_class = TripSummary -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:trip_id) %></dt>
      <dd><pre class="prettyprint"><%= @trip_summary.trip_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:distance) %></dt>
      <dd><pre class="prettyprint"><%= @trip_summary.distance %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time_of_departure) %></dt>
      <dd><pre class="prettyprint"><%= @trip_summary.time_of_departure %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time_of_arrival) %></dt>
      <dd><pre class="prettyprint"><%= @trip_summary.time_of_arrival %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_soc) %></dt>
      <dd><pre class="prettyprint"><%= @trip_summary.start_soc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:end_soc) %></dt>
      <dd><pre class="prettyprint"><%= @trip_summary.end_soc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:average_speed) %></dt>
      <dd><pre class="prettyprint"><%= @trip_summary.average_speed %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trip_summaries_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_summary_path(@trip_summary), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_summary_path(@trip_summary),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
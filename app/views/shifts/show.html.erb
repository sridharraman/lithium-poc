<%- model_class = Shift -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:vehicle_id) %></dt>
      <dd><pre class="prettyprint"><%= @shift.vehicle_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:days_of_the_week) %></dt>
      <dd><pre class="prettyprint"><%= @shift.days_of_the_week %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:shift_type) %></dt>
      <dd><pre class="prettyprint"><%= @shift.shift_type %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              shifts_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shift_path(@shift), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shift_path(@shift),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
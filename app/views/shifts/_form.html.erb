<%= form_for @shift, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :vehicle_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :vehicle_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :days_of_the_week, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :days_of_the_week, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shift_type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :shift_type, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  shifts_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

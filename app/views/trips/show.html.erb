<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:vehicle_id) %></dt>
      <dd><pre class="prettyprint"><%= @trip.vehicle_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:origin) %></dt>
      <dd><pre class="prettyprint"><%= @trip.origin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:destination) %></dt>
      <dd><pre class="prettyprint"><%= @trip.destination %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estimated_distance) %></dt>
      <dd><pre class="prettyprint"><%= @trip.estimated_distance %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estimated_start_soc) %></dt>
      <dd><pre class="prettyprint"><%= @trip.estimated_start_soc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estimated_end_soc) %></dt>
      <dd><pre class="prettyprint"><%= @trip.estimated_end_soc %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:hvac_status) %></dt>
      <dd><pre class="prettyprint"><%= @trip.hvac_status %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:employee_id) %></dt>
      <dd><pre class="prettyprint"><%= @trip.employee_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
      <dd><pre class="prettyprint"><%= @trip.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone_number) %></dt>
      <dd><pre class="prettyprint"><%= @trip.phone_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:route_id) %></dt>
      <dd><pre class="prettyprint"><%= @trip.route_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:days_of_the_week) %></dt>
      <dd><pre class="prettyprint"><%= @trip.days_of_the_week %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estimated_start_time) %></dt>
      <dd><pre class="prettyprint"><%= @trip.estimated_start_time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estimated_end_time) %></dt>
      <dd><pre class="prettyprint"><%= @trip.estimated_end_time %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              trips_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_trip_path(@trip), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              trip_path(@trip),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
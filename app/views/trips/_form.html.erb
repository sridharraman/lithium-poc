<%= form_for @trip, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :vehicle_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :vehicle_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :origin, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :origin, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :destination, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :destination, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimated_distance, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estimated_distance, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimated_start_soc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estimated_start_soc, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimated_end_soc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estimated_end_soc, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :hvac_status, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :hvac_status, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :employee_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :employee_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone_number, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :route_id, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :route_id, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :days_of_the_week, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :days_of_the_week, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimated_start_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estimated_start_time, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estimated_end_time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estimated_end_time, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  trips_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

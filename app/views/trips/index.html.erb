<%- model_class = Trip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:vehicle_id) %></th>
      <th><%= model_class.human_attribute_name(:origin) %></th>
      <th><%= model_class.human_attribute_name(:destination) %></th>
      <th><%= model_class.human_attribute_name(:estimated_distance) %></th>
      <th><%= model_class.human_attribute_name(:estimated_start_soc) %></th>
      <th><%= model_class.human_attribute_name(:estimated_end_soc) %></th>
      <th><%= model_class.human_attribute_name(:hvac_status) %></th>
      <th><%= model_class.human_attribute_name(:employee_id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:route_id) %></th>
      <th><%= model_class.human_attribute_name(:days_of_the_week) %></th>
      <th><%= model_class.human_attribute_name(:estimated_start_time) %></th>
      <th><%= model_class.human_attribute_name(:estimated_end_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.id %></td>
          <td><%= trip.vehicle.name %></td>
          <td><%= trip.origin %></td>
          <td><%= trip.destination %></td>
          <td><%= trip.estimated_distance %></td>
          <td><%= trip.estimated_start_soc %></td>
          <td><%= trip.estimated_end_soc %></td>
          <td><%= trip.hvac_status %></td>
          <td><%= trip.employee_id %></td>
          <td><%= trip.address %></td>
          <td><%= trip.phone_number %></td>
          <td><%= trip.route_id %></td>
          <td><%= trip.days_of_the_week %></td>
          <td><%= trip.estimated_start_time %></td>
          <td><%= trip.estimated_end_time %></td>
        <td><%=l trip.created_at, format: :long %></td>
        <td>
          <%= link_to trip_path(trip), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_trip_path(trip), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to trip_path(trip), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trip_path,
            :class => 'btn btn-primary' %>
